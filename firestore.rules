rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read/write their own preferences
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /projects/{projectId} {
      // Allow project creation for any authenticated user
      allow create: if request.auth != null;
      
      // Allow listing projects where the user is a member
      allow list: if request.auth != null;

      // Allow reading/updating/deleting a specific project if the user is a member
      allow read, update, delete: if request.auth != null && resource.data.roles[request.auth.uid] in ['Owner', 'Editor', 'Viewer'];
      
      // Allow access to all subcollections if user has access to the parent project
      match /{subcollection}/{docId} {
        allow read, write, create, delete: if request.auth != null && get(/databases/$(database)/documents/projects/$(projectId)).data.roles[request.auth.uid] in ['Owner', 'Editor', 'Viewer'];
      }
    }
  }
}
